generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  email String? @unique
  name String?
  phoneNumber String @unique
  address Address?
  dropoff DropOff?
}

model Address {
  id Int @id @default(autoincrement())
  streetAddress String
  apartment String?
  city String
  state String
  zipCode String
  country String
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
}

model DropOff {
  id Int @id @default(autoincrement())
  separateWash Boolean
  handDried Boolean
  notes String
  userId Int @unique
  user User @relation(fields: [userId],references: [id])
}


